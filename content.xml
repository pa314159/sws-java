<office:document-content xmlns:office="urn:oasis:names:tc:opendocument:xmlns:office:1.0" xmlns:style="urn:oasis:names:tc:opendocument:xmlns:style:1.0" xmlns:text="urn:oasis:names:tc:opendocument:xmlns:text:1.0" xmlns:table="urn:oasis:names:tc:opendocument:xmlns:table:1.0" xmlns:draw="urn:oasis:names:tc:opendocument:xmlns:drawing:1.0" xmlns:fo="urn:oasis:names:tc:opendocument:xmlns:xsl-fo-compatible:1.0" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:meta="urn:oasis:names:tc:opendocument:xmlns:meta:1.0" xmlns:number="urn:oasis:names:tc:opendocument:xmlns:datastyle:1.0" xmlns:svg="urn:oasis:names:tc:opendocument:xmlns:svg-compatible:1.0" xmlns:chart="urn:oasis:names:tc:opendocument:xmlns:chart:1.0" xmlns:dr3d="urn:oasis:names:tc:opendocument:xmlns:dr3d:1.0" xmlns:math="http://www.w3.org/1998/Math/MathML" xmlns:form="urn:oasis:names:tc:opendocument:xmlns:form:1.0" xmlns:script="urn:oasis:names:tc:opendocument:xmlns:script:1.0" xmlns:ooo="http://openoffice.org/2004/office" xmlns:ooow="http://openoffice.org/2004/writer" xmlns:oooc="http://openoffice.org/2004/calc" xmlns:dom="http://www.w3.org/2001/xml-events" xmlns:xforms="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rpt="http://openoffice.org/2005/report" xmlns:of="urn:oasis:names:tc:opendocument:xmlns:of:1.2" xmlns:xhtml="http://www.w3.org/1999/xhtml" xmlns:grddl="http://www.w3.org/2003/g/data-view#" xmlns:tableooo="http://openoffice.org/2009/table" xmlns:field="urn:openoffice:names:experimental:ooo-ms-interop:xmlns:field:1.0" xmlns:formx="urn:openoffice:names:experimental:ooxml-odf-interop:xmlns:form:1.0" xmlns:css3t="http://www.w3.org/TR/css3-text/" office:version="1.2" grddl:transformation="http://docs.oasis-open.org/office/1.2/xslt/odf2rdf.xsl"><office:scripts/><office:font-face-decls><style:font-face style:name="Courier New" svg:font-family="&apos;Courier New&apos;"/><style:font-face style:name="DAAAAA+CourierNewPSMT" svg:font-family="DAAAAA+CourierNewPSMT"/><style:font-face style:name="Tahoma1" svg:font-family="Tahoma"/><style:font-face style:name="MS Mincho" svg:font-family="&apos;MS Mincho&apos;, &apos;ＭＳ 明朝&apos;" style:font-family-generic="modern"/><style:font-face style:name="Arial" svg:font-family="Arial" style:font-family-generic="system" style:font-pitch="variable"/><style:font-face style:name="Tahoma" svg:font-family="Tahoma" style:font-family-generic="system" style:font-pitch="variable"/></office:font-face-decls><office:automatic-styles><style:style style:name="P1" style:family="paragraph" style:parent-style-name="Standard"><style:paragraph-properties fo:margin-left="0cm" fo:margin-right="7.532cm" fo:text-indent="0cm" style:auto-text-indent="false"/></style:style><style:style style:name="P2" style:family="paragraph" style:parent-style-name="Standard"><style:paragraph-properties fo:margin-left="0cm" fo:margin-right="7.532cm" fo:text-indent="0cm" style:auto-text-indent="false"/><style:text-properties fo:language="ro" fo:country="RO"/></style:style><style:style style:name="P3" style:family="paragraph" style:parent-style-name="Standard"><style:paragraph-properties fo:margin-left="0cm" fo:margin-right="5.842cm" fo:text-indent="0cm" style:auto-text-indent="false"><style:tab-stops/></style:paragraph-properties></style:style><style:style style:name="P4" style:family="paragraph" style:parent-style-name="Standard"><style:paragraph-properties fo:margin-left="0cm" fo:margin-right="7.532cm" fo:text-indent="0cm" style:auto-text-indent="false"/></style:style><style:style style:name="P5" style:family="paragraph" style:parent-style-name="Standard"><style:paragraph-properties fo:margin-left="0cm" fo:margin-right="7.532cm" fo:text-indent="0cm" style:auto-text-indent="false"/><style:text-properties fo:language="ro" fo:country="RO" style:font-name-asian="MS Mincho"/></style:style><style:style style:name="T1" style:family="text"><style:text-properties style:font-name-asian="MS Mincho"/></style:style><style:style style:name="T2" style:family="text"><style:text-properties style:font-name="DAAAAA+CourierNewPSMT" fo:font-size="10pt" style:font-name-asian="DAAAAA+CourierNewPSMT" style:font-size-asian="10pt" style:font-name-complex="DAAAAA+CourierNewPSMT" style:font-size-complex="10pt"/></style:style></office:automatic-styles><office:body><office:text text:use-soft-page-breaks="true"><text:sequence-decls><text:sequence-decl text:display-outline-level="0" text:name="Illustration"/><text:sequence-decl text:display-outline-level="0" text:name="Table"/><text:sequence-decl text:display-outline-level="0" text:name="Text"/><text:sequence-decl text:display-outline-level="0" text:name="Drawing"/></text:sequence-decls><text:p text:style-name="P1">Actualităţi.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">După mai multe luni</text:p><text:p text:style-name="P1">de ploi torenţiale.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">fluviul Sena începe să crească</text:p><text:p text:style-name="P1">mai rapid decât de obicei.</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">De/a lungul săptămânii trecute, mii</text:p><text:p text:style-name="P1">de parizieni care locuiau lângă apă</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">şi/au evacuat deja locuinţele,</text:p><text:p text:style-name="P1">ca să străbată întregul oraş.</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">Locuitorii călătoresc cu barca</text:p><text:p text:style-name="P1">sau traversează pe podeţe de lemn</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">construite de aceiaşi parizieni.</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">Apa s/a ridicat cu 6 m</text:p><text:p text:style-name="P1">pestre nivelul normal.</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">Turnul Eiffel şi/a udat picioarele.</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">Numai pe dealul Montmartre,</text:p><text:p text:style-name="P1">oamenii se mai pot usca un pic.</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">Sfârşit</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">Emile Petit prezintă</text:p><text:p text:style-name="P1">+Poveste de dragoste primăvăratică+</text:p><text:p text:style-name="P3"/><text:p text:style-name="P1">Bună ziua ! Îmi daţi patru bilete</text:p><text:p text:style-name="P1">pentru doi adulţi şi doi copii ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile, aici !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Dă/mi mie asta.</text:p><text:p text:style-name="P1">/ Mulţumesc.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Emile, am un singur regret.<text:line-break/>/ Da ? Care ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ţi/au trebuit doi ani</text:p><text:p text:style-name="P1">să mă inviţi la o întâlnire.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mă temeam că o să spui nu.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile, dacă aş fi ştiut !</text:p><text:p text:style-name="P1">Am irosit atâta timp !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Maud, draga mea,</text:p><text:p text:style-name="P1">nu/ţi mai bate capul cu asta.</text:p><text:p text:style-name="P1"><text:soft-page-break/></text:p><text:p text:style-name="P1">Ce/a fost a fost.</text:p><text:p text:style-name="P1">Viitorul e al nostru.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Acum nimic nu ne mai poate despărţi.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Începe spectacolul !<text:line-break/>Ce ai acolo ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">La stânga !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mişcă/te ! La dreapta !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">E un dragon !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce Dumnezeu să caute un dragon</text:p><text:p text:style-name="P1">în Franţa ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce Dumnezeu să caute un dragon</text:p><text:p text:style-name="P1">în Franţa ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu !<text:line-break/></text:p><text:p text:style-name="P1">Vino !<text:line-break/><text:line-break/>Uite/l !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">UN MONSTRU LA PARIS</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ai grijă !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Vino !<text:line-break/><text:line-break/>/ Bună, Raoul !</text:p><text:p text:style-name="P1">/ Bună, Maud !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ia te uită !</text:p><text:p text:style-name="P1">Minionă, ca întotdeauna !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ai o rochie foarte frumoasă.</text:p><text:p text:style-name="P1">Ce/i asta ? Nuanţa vinetei ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mulţumesc. Cred că e violet.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mai degrabă nuanţa vinetei, cred.</text:p><text:p text:style-name="P1">Emile e acolo ? Am ceva pentru el.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cred că e culoarea vinetei.</text:p><text:p text:style-name="P2"/><text:p text:style-name="P2">Noul film al lui <text:span text:style-name="T1">Méliès !</text:span></text:p><text:p text:style-name="P5">O să fie tare bucuros. E idolul lui.</text:p><text:p text:style-name="P5"><text:soft-page-break/></text:p><text:p text:style-name="P5">/ Emile !</text:p><text:p text:style-name="P5">/ Raoul !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Prinde !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">E cam jenant.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Tu de colo !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Vino ! Repede !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Nu mă uit.</text:p><text:p text:style-name="P5">Nu pot să văd nimic acum.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P2">Vino ! Hai !</text:p><text:p text:style-name="P2"/><text:p text:style-name="P2">Te duci undeva, Emile ?<text:line-break/></text:p><text:p text:style-name="P2">Da, trebuie să mă duc la <text:span text:style-name="T1">Barbès,</text:span></text:p><text:p text:style-name="P5">să/mi cumpăr o curea nouă.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">/ Evident...</text:p><text:p text:style-name="P5">/ Nu ! O curea pentru proiector.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">De când i/ai pus pantaloni</text:p><text:p text:style-name="P5">proiectorului tău ?</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">/ Pantaloni, proiectorului ?</text:p><text:p text:style-name="P5">/ Da, pentru că... Nu contează.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Ai nevoie să te duc cu maşina ?</text:p><text:p text:style-name="P5">Îmi e îm drum. Catherine e aici.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Catherine ! Te rog !<text:line-break/></text:p><text:p text:style-name="P5">Spune/i că/mi pare rău !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Vino aici ! Întoarce/te !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Ne vedem mai târziu,</text:p><text:p text:style-name="P5">la premiera filmului ?</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Da. Da, ne vedem acolo.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Ştii, Maud...</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Mă gândeam... dacă nu te supără...</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Poate ar vrea să...</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">/ Da, sigur că aş vrea !</text:p><text:p text:style-name="P5">/ Ai vrea ?</text:p><text:p text:style-name="P5"><text:soft-page-break/></text:p><text:p text:style-name="P5">Da, mi/ar face mare plăcere să duc</text:p><text:p text:style-name="P5">rola înapoi în camera ta. Sigur !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Da, sigur... Asta era !</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Bineînţeles... Vreau să zic..</text:p><text:p text:style-name="P5">Îţi mulţumesc. Poftim.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">Mulţumesc, Maud.</text:p><text:p text:style-name="P5"/><text:p text:style-name="P5">/ Altceva, Emile ?</text:p><text:p text:style-name="P5">/ Da...</text:p><text:p text:style-name="P5"/><text:p text:style-name="P1">M/am gândit că, poate,</text:p><text:p text:style-name="P1">după premieră...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile, prietene !</text:p><text:p text:style-name="P1">Să ne grăbim un pic, că am treabă.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">O să ai timp din belşug s/o curtezi</text:p><text:p text:style-name="P1">pe Maud când o să te întorci.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Pa !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Mersi frumos, Raoul !<text:line-break/>/ Cu mare plăcere.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Dar pentru ce ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Eu stăteam de vorbă cu ea,</text:p><text:p text:style-name="P1">şi tu ai stricat totul !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Drăcuşor ce eşti !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Te/ai hotărât, în sfârşit,</text:p><text:p text:style-name="P1">să/i dai întâlnire ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu. E atât de complicat...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce e complicat ? Tu îi dai întâlnire,</text:p><text:p text:style-name="P1">ea leşină de plăcere,</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">ea spune da, e rândul tău să leşini</text:p><text:p text:style-name="P1">şi cu asta, basta ! Ai o fată !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu e chiar atât de simplu.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">De câte ori o văd, mi se încleiază</text:p><text:p text:style-name="P1">limba în cerul gurii.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">De aceea... o să/i scrii</text:p><text:p text:style-name="P1">o scrisoare.</text:p><text:p text:style-name="P1"><text:soft-page-break/></text:p><text:p text:style-name="P1">Singurul lucru pe care va trebui</text:p><text:p text:style-name="P1">să/l lipeşti cu clei va fi timbrul.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Să/i scriu ?</text:p><text:p text:style-name="P1">Ideea nu e rea !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sigur că nu e o idee rea.</text:p><text:p text:style-name="P1">E o idee genială ! Mie mi/a venit !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Te ajut, dacă vrei. Mă pricep</text:p><text:p text:style-name="P1">la vorbe frumoase, după cum ştii.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Da... Dar ştii multe</text:p><text:p text:style-name="P1">şi despre dragoste, Raoul ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Dacă ştiu multe...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Eşti adorabil. Mă/ntrebi dacă ştiu</text:p><text:p text:style-name="P1">multe despre dragoste ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ştii ce se spune prin Paris ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Când Raoul pleacă la vânat,</text:p><text:p text:style-name="P1">toate pisicile se pun pe mieunat !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Da, rimează.</text:p><text:p text:style-name="P1">/ Nu numai atât, bunul meu prieten !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Bună ziua, Madame Omelette !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sper că nu vă simţiţi prea răvăşită</text:p><text:p text:style-name="P1">şi că sunteţi pufoasă, ca de obicei.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Unde/mi sunt ouăle ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu/i vorba că n/am încredere în tine,</text:p><text:p text:style-name="P1">dar, după cum conduci,</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">m/am gândit că e mai sigur</text:p><text:p text:style-name="P1">să le aduc cu bărcuţa.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Grozav !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Te simţi bine ?</text:p><text:p text:style-name="P1">/ Da, numai că...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Alergiile !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Tâmpitule !</text:p><text:p text:style-name="P1">/ Scuze, scumpo !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Conduci foarte rapid !<text:line-break/></text:p><text:p text:style-name="P1"><text:soft-page-break/>Ştiu ! De când Catherine merge</text:p><text:p text:style-name="P1">cu ulei de floarea/soarelui, zboară !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Apropo de zburat... Haina ta...</text:p><text:p text:style-name="P1">Mă mănâncă pielea de la ea.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Parcă ar fi din paie.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Din paie ? Glumeşti ?<text:line-break/>Ştii cât am dat pe ea ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile, e o haină naturală,</text:p><text:p text:style-name="P1">sută la sută !</text:p><text:p text:style-name="P1"><text:line-break/>Foarte rară !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Potopul secolului !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Popularitatea comisarului scade mai</text:p><text:p text:style-name="P1">repede decât cresc cotele apelor !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Raoul !<text:line-break/><text:line-break/>Dumnezeule !<text:line-break/><text:line-break/>Nu !<text:line-break/></text:p><text:p text:style-name="P1">Urăsc păsările !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mulţumesc, Raul !<text:line-break/></text:p><text:p text:style-name="P1">N/ai pentru ce, uriaşule !<text:line-break/>Ne vedem mai târziu !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ai grijă pe unde calci !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Uite. O curea nou/nouţă,</text:p><text:p text:style-name="P1">la mâna a doua.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Altceva ?</text:p><text:p text:style-name="P1">/ Poate.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ E o frumuseţe, nu/i aşa ?</text:p><text:p text:style-name="P1">/ Da !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Ce/i aia ?</text:p><text:p text:style-name="P1">/ Ce/i aia ? Viitorul !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu... Alea sunt paie ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu. Şi/acum, înapoi în viitor !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Vezi ? Fără băşici, fără haine</text:p><text:p text:style-name="P1"><text:soft-page-break/>murdare, fără dureri !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Numai confort, fără efort !</text:p><text:p text:style-name="P1">Ăsta e viitorul.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Dar ce face el ?</text:p><text:p text:style-name="P1">/ Păi... face...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ La revedere !</text:p><text:p text:style-name="P1">/Mulţumesc. La revedere !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Priveşte !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce frumos !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Aia e camera mea de filmat.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">De ce fuge ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Hoţul ! Hoţul !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Camera mea !<text:line-break/></text:p><text:p text:style-name="P1">Nu...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu... N/ar trebui să facă asta.</text:p><text:p text:style-name="P1">Fantastic !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Eu nu...</text:p><text:p text:style-name="P1">Ieri funcţiona de minune !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Poate dacă apăs aici...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Unu...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Doi...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Trebuie să facă aşa ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Raoul ! Îţi mulţumesc din suflet !</text:p><text:p text:style-name="P1">Mi/ai salvat viaţa !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Serios ?</text:p><text:p text:style-name="P1">/ Da. Uite...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">... şi trei !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Am vrut să fac asta !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Acum ne/am încălzit şi putem</text:p><text:p text:style-name="P1">să livrăm frumuseţile astea.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu ştiu dacă pot.</text:p><text:p text:style-name="P1"><text:soft-page-break/>Nu vreau să întârzii.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">N/avea grijă.</text:p><text:p text:style-name="P1">Ajungem cât ai clipi.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">O să/ţi placă enorm Profesorul.</text:p><text:p text:style-name="P1">E o mare figură.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Un avangardist, un adevărat vizionar,</text:p><text:p text:style-name="P1">aşa, cam ca mine.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Păcat că nu mă lasă niciodată</text:p><text:p text:style-name="P1">să văd la ce lucrează.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Poate că e timid.</text:p><text:p text:style-name="P1">/ Da, poate.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Se pare că e foarte timid !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce avem aici ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">+Dragă Raoul, sunt acum la New York</text:p><text:p text:style-name="P1">pentru o conferinţă.+</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">+Lasă turba afară.+</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">În absenţa mea,</text:p><text:p text:style-name="P1">Charles se va ocupa de ele.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cine e Charles ?<text:line-break/></text:p><text:p text:style-name="P1">Vino, Charles !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">+Charles, asistent botanist.+</text:p><text:p text:style-name="P1">Bună, Charles !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Să ducem preţioşii saci înăuntru.</text:p><text:p text:style-name="P1">Doar nu vrem să se ude.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu, Charles ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce e ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">+Acum, că aţi intrat,</text:p><text:p text:style-name="P1">lăsaţi turba la uşă.+</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Orice/ai face, nu atinge nimic !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mulţumesc. O zi bună !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Gata, m/am prins !<text:line-break/></text:p><text:p text:style-name="P1">Profesorul pare să te cunoască</text:p><text:p text:style-name="P1"><text:soft-page-break/>foarte bine.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Da...</text:p><text:p text:style-name="P1">/ Minunat !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Altă treabă bine făcută...</text:p><text:p text:style-name="P1">Ce mai... turbată !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Fiindcă e turbă...</text:p><text:p text:style-name="P1">Pricepi ? Te/ai prins ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Eşti o maimuţă.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Eşti pregătit pentru un tur rapid ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Maimuţa a spus că nu trebuie să...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce să zic, a spus maimuţa...</text:p><text:p text:style-name="P1">Ai putea să filmezi !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Am avea propriul film cu junglă !</text:p><text:p text:style-name="P1">Eu aş fi bravul explorator. Ce zici ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Crezi că aş putea ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Eşti ceva... Sigur că da !</text:p><text:p text:style-name="P1">Să trecem la treabă !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Da. O să/i spunem...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Să/i spunem Jeff,</text:p><text:p text:style-name="P1">însoţit de prietenul Charlie.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Noi doi vom salva lumea</text:p><text:p text:style-name="P1">în mijlocul întunecat al junglei.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Uite ce monstru !<text:line-break/><text:line-break/>Ce fel de copac e ăla ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ăla, dragă Emile, e un Extremus</text:p><text:p text:style-name="P1">Gigantis Circus... Asparagus.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">De fapt, e un sequoia.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Un sequoia ? Da. Se numeşte sequoia.</text:p><text:p text:style-name="P1">Tu preferi numele +generic+.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Doamne... Ia te uită !<text:line-break/>Ăsta e laboratorul profesorului !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile !<text:line-break/>Vino să mă filmezi !</text:p><text:p text:style-name="P1"><text:soft-page-break/></text:p><text:p text:style-name="P1">Ce avem aici ? +A nu se folosi...+</text:p><text:p text:style-name="P1">Să vedem ce efect are.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Filmezi ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Da, dar scrie să nu/l foloseşti.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">+Ţi/am spus să nu atingi nimic.+</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Aşa e ! Bine, următorul !<text:line-break/></text:p><text:p text:style-name="P1">Ce zici de asta ?</text:p><text:p text:style-name="P1">+Atomizează melodia...+ Bun nume !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">+Pentru o voce mai melodioasă.+</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Incredibil !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Uluitor !</text:p><text:p text:style-name="P1">Charles, ai o voce minunată.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Să/l încercăm pe ăsta.</text:p><text:p text:style-name="P1">+Superfertilizatorul+. Pare bun.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu/mi trebuie decât o mică sămânţă.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ia din borcanul ăsta !</text:p><text:p text:style-name="P1">Un stropşor, două... Şi aşteptăm.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Şi aşteptăm în continuare.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Şi aşteptăm.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Asta e o făcătură.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Poate că trebuie s/o uzi.</text:p><text:p text:style-name="P1">/ Bună idee !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sunt foarte dezamăgit,</text:p><text:p text:style-name="P1">dle Profesor.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Următorul !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ai văzut ?!</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Da, am văzut totul !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Dumnezeule ! O floarea/soarelui</text:p><text:p text:style-name="P1">atât de mare produce tone de ulei !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ar putea reduce cu zece bugetul</text:p><text:p text:style-name="P1">lui Catherine pentru combustibil.</text:p><text:p text:style-name="P1"><text:soft-page-break/></text:p><text:p text:style-name="P1">Asta trebuie să fie</text:p><text:p text:style-name="P1">ziua mea norocoasă !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile !</text:p><text:p text:style-name="P1"><text:line-break/>Raoul ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Raoul ? Eşti teafăr ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cred că haina mi/a salvat viaţa.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile ? Emile !</text:p><text:p text:style-name="P1">N/am păţit nimic !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Bine...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Charles ! Unde e Charles ?<text:line-break/>Charles !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">+Uitaţi/vă/n sus !+</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Charles !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">E/n ordine. Charles e teafăr.</text:p><text:p text:style-name="P1">Suntem teferi: tu, eu, plantele...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Acum o să plecăm.</text:p><text:p text:style-name="P1">Noapte bună !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">A fost o adevărată plăcere.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Raoul ?</text:p><text:p text:style-name="P1">Ai văzut cumva ceva ciudat ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">În afară de o maimuţă cântăreaţă,</text:p><text:p text:style-name="P1">o floarea/soarelui de 15 m</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">şi fiole cu licori</text:p><text:p text:style-name="P1">care erau să ne omoare ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu. Tu vezi ceva straniu</text:p><text:p text:style-name="P1">în toate astea ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">N/ai văzut o creatură de vreo 3 m,</text:p><text:p text:style-name="P1">cu ochi mari şi roşii, de insectă,</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">cu patru picioare</text:p><text:p text:style-name="P1">şi peri pe tot corpul ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Emile, cred că cineva a văzut</text:p><text:p text:style-name="P1">la prea multe filme.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1"><text:soft-page-break/>/ Aşa crezi ?</text:p><text:p text:style-name="P1">/ Da, prietene.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">După atâtea inundaţii,</text:p><text:p text:style-name="P1">ce iarnă cumplită !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cu siguranţă, e o iarnă aspră.</text:p><text:p text:style-name="P1">Desigur, aşa e, dar nu mă plâng.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Normal. Noi avem noroc.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Doamnă Carlotta ? I/aţi spus</text:p><text:p text:style-name="P1">lui Lucille de cântecul meu ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Da, continuă...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Apa se duce acolo unde se duce.</text:p><text:p text:style-name="P1"><text:line-break/>Ăştia mă iau drept Moise ?</text:p><text:p text:style-name="P1">Cred că pot face minuni ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu, dar nişte bărci, mai multe alei,</text:p><text:p text:style-name="P1">adăposturi pentru săraci, pături...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Lasă păturile !</text:p><text:p text:style-name="P1">Aici ne trebuie o diversiune.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Da, perfect !<text:line-break/>Ca să deviem apa.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu apa, Pate.</text:p><text:p text:style-name="P1">Trebuie să le distragem atenţia.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Să/i facem să nu se mai gândească</text:p><text:p text:style-name="P1">la udătură, ci la o idee măreaţă.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ceva care să elimine ştirea asta</text:p><text:p text:style-name="P1">şi s/o înlocuiască</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">cu o noutate</text:p><text:p text:style-name="P1">care le va înflăcăra imaginaţia.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">De pildă ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu ştiu.</text:p><text:p text:style-name="P1">Ceva care să aibă sare şi piper.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ceva incitant !<text:line-break/></text:p><text:p text:style-name="P1">/ Dă/l încoace !</text:p><text:p text:style-name="P1">/ Poftim ?!</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Pleacă ! Nu/i vina mea !</text:p><text:p text:style-name="P1"><text:soft-page-break/></text:p><text:p text:style-name="P1">Acum fă ce vrei !<text:line-break/><text:line-break/>Dle comisar Maynott, cpt. Pate...</text:p><text:p text:style-name="P1">Presupun că totul e pe placul dv. ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Da, scumpa mea Carlotta.</text:p><text:p text:style-name="P1">/ Bineînţeles că totul e bine.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Totul e aproape perfect.</text:p><text:p text:style-name="P1">/ Aproape perf...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Acum nu mai trebuie decât</text:p><text:p text:style-name="P1">ca îngeraşul de nepoată/ta</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">să/mi accepte invitaţia.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cu complimentele mele.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Dle comisar, ce onoare !</text:p><text:p text:style-name="P1">Sunt sigură că va fi încântată.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Vorbeşti de lup...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">E minunată, e încrezătoare...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sena, Sena, Sena !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Îmi dau seama</text:p><text:p text:style-name="P1">că mă hipnotizează...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sena, Sena, Sena <text:line-break/><text:line-break/>Aud cum luna îngână un refren...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sena, Sena, Sena !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Oare e ea divină ?</text:p><text:p text:style-name="P1">Sau vinul e de vină ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sena, Sena, Sena !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu ştiu...</text:p><text:p text:style-name="P1">Aşa că nu mă întrebaţi...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Aşa suntem noi,</text:p><text:p text:style-name="P1">eu şi Sena, alături...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu ştiu...</text:p><text:p text:style-name="P1">Aşa că nu mă întrebaţi...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Aşa suntem noi,</text:p><text:p text:style-name="P1">eu şi Sena, alături...</text:p><text:p text:style-name="P1"><text:soft-page-break/></text:p><text:p text:style-name="P1">Aşa suntem noi,</text:p><text:p text:style-name="P1">eu şi Sena, alături...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu mă interesează.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Toată lumea are nevoie de cineva.</text:p><text:p text:style-name="P1">Chiar şi tu !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Uite, comisarul de pildă.</text:p><text:p text:style-name="P1">Are succes, e cunoscut în ţară...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ E înfumurat.</text:p><text:p text:style-name="P1">/ Are medalia de onoare !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ E plicticos.</text:p><text:p text:style-name="P1">/ Oamenii îl respectă.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Are păr frumos.<text:line-break/>Ce mult îmi place părul lui !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Miroase bine, nu/i aşa ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ E atrăgător...</text:p><text:p text:style-name="P1">/ Nu e genul meu !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu e genul tău ? Bine.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Poate nu încă.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Dar dacă/l cunoşti şi eşti drăguţă</text:p><text:p text:style-name="P1">cu el, va deveni genul tău.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Poate că îi arăţi zâmbetul tău</text:p><text:p text:style-name="P1">fermecător. Cine ştie ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Lasă/mă să văd.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Perfect !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Ce cântăreaţă !</text:p><text:p text:style-name="P1">/ Ce femeie !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cum adică, +Ce femeie+ ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mă întreb...</text:p><text:p text:style-name="P1">Nu cumva eşti gelos ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Doamne !</text:p><text:p text:style-name="P1">/ Ce e ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Mă ocup eu de asta.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1"><text:soft-page-break/>/ Ce s/a întâmplat ?</text:p><text:p text:style-name="P1">/ M/a atins ceva !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu/ţi face griji, draga mea.</text:p><text:p text:style-name="P1">Nu atacă un animal mai mare.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Poftim ?!</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu ! Doamne, dă/mi drumul !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Du/te ! Fugi !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Fugi !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Oribil... Avea 3 m !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">... nişte dinţi ca ferăstraiele !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sinistru !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Da ! Sigur... Semnaţi aici !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cum rămâne cu desenul ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Aşteaptă !</text:p><text:p text:style-name="P1">/ E din ce în ce mai bun. Nu ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ia să vedem.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ce poate rima</text:p><text:p text:style-name="P1">cu +măreţ ca împăratul+ ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ştiu ! +Subsemnatul+ !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Intră !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Pate...</text:p><text:p text:style-name="P1">/ Cu ce naiba te/ai îmbrăcat ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Face parte din noua campanie pentru</text:p><text:p text:style-name="P1">sănătate a ofiţerilor de elită.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Am acceptat să conduc Unitatea</text:p><text:p text:style-name="P1">Bicicliştilor Rapizi şi Responsabili.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Genial ! Ceva nou ?</text:p><text:p text:style-name="P1">/ E numai o teorie, dar...</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Aici a fost spart geamul vitrinei.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Aici s/au speriat copiii</text:p><text:p text:style-name="P1">îngrozitor.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1"><text:soft-page-break/>Şi aici s/a speriat calul şi a călcat</text:p><text:p text:style-name="P1">în picioare magazinul de lenjerie.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ Pricepi unde bat ?</text:p><text:p text:style-name="P1">/ De fapt... Nu.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Există un tipar, o progresie logică,</text:p><text:p text:style-name="P1">în tot şirul evenimentelor.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">/ De aici...</text:p><text:p text:style-name="P1">/ Şi ?</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Aş vrea să/mi permiteţi să fac</text:p><text:p text:style-name="P1">o anchetă mai amănunţită, domnule.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sigur că da, anchetează cât vrei !</text:p><text:p text:style-name="P1">Să vadă publicul că ştim să acţionăm.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Vă mulţumesc, domnule.</text:p><text:p text:style-name="P1"><text:line-break/>Vă mulţumesc.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Nu te grăbi prea tare</text:p><text:p text:style-name="P1">să rezolvi cazul !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cu cât mai repede, cu atât mai bine.</text:p><text:p text:style-name="P1">Suntem în pragul unei catastrofe.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Acolo unde tu vezi o catastrofă,</text:p><text:p text:style-name="P1">eu văd oportunitatea.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ştii, dragul meu căpitan,</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">când oamenii se tem,</text:p><text:p text:style-name="P1">au nevoie de protecţie.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Au nevoie de cineva</text:p><text:p text:style-name="P1">la care să apeleze.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cineva în care să creadă !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Un salvator ! Un erou !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Cu alte cuvinte,</text:p><text:p text:style-name="P1">au nevoie de mine !</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Fii zâmbitoare</text:p><text:p text:style-name="P1">şi salută/l din partea mea.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Sigur.</text:p><text:p text:style-name="P1"/><text:p text:style-name="P1">Ba nu, nu e nevoie. Nu...</text:p><text:p text:style-name="P1">Dar dacă pomeneşte de mine ?</text:p><text:p text:style-name="P1"><text:soft-page-break/></text:p><text:p text:style-name="P1"/><text:p text:style-name="P1"/><text:p text:style-name="P1"/><text:p text:style-name="P1"/><text:p text:style-name="P1"/><text:p text:style-name="P1"/><text:p text:style-name="P1"/><text:p text:style-name="P1"/><text:p text:style-name="P1"/></office:text></office:body></office:document-content>